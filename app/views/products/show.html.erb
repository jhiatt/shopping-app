<h1><%= @product.name %></h1>
<p>Image: <img src="<%= @product.image %>" alt=""></p>
<p>Price: <%= @product.price %></p>
<p>Description: <%= @product.description %></p>

<p><%= form_tag "/products/#{@product.id}", method: :delete do %>
  <input type="submit" value="destroy">
  <% end %>
</p>

<p><%= link_to "DESTROY!!", "/products/#{@product.id}", method: :delete %></p>

<p><%= button_to "DESTROY!!", "/products/#{@product.id}", method: :delete %></p>