<p><%= link_to "Feeling Lucky (tm google)", "/products/rand", method: :get %></p>

<%= form_tag "/products/search", method: :get do %>
<div> Search for a product: <input type="text" name="search"> </div>
  <div> <input type="submit" value="Go"></div>
  <% end %>


